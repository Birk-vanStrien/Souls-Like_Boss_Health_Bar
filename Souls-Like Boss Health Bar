            transition: all 0.3s;
        }
        .slhb-input:focus {
            outline: none;
            border-color: #a61919;
            box-shadow: 0 0 10px rgba(166, 25, 25, 0.3);
        }
        /* Removes input arrows */
        input[type=number]::-webkit-inner-spin-button, 
        input[type=number]::-webkit-outer-spin-button { 
            -webkit-appearance: none; 
            margin: 0; 
        }
        /* Boss picture upload */
        .slhb-file-input::-webkit-file-upload-button {
            background: #333;
            border: 1px solid #555;
            color: #ccc;
            padding: 5px 10px;
            font-family: 'Cinzel', serif;
            cursor: pointer;
            margin-right: 10px;
        }
        .slhb-file-input::-webkit-file-upload-button:hover {
            color: white;
            border-color: #888;
        }

        .slhb-btn {
            background: linear-gradient(to bottom, #333, #1a1a1a);
            border: 1px solid #555;
            color: #ccc;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.2s;
        }
        .slhb-btn:hover {
            border-color: #ddd;
            color: #fff;
            text-shadow: 0 0 5px #fff;
            transform: translateY(-1px);
        }
        .slhb-btn:active {
            transform: translateY(1px);
        }

        /* Input buttons */
        .attack-button:hover {
            color: #ff5555;
            border-color: #a61919;
            text-shadow: 0 0 5px #a61919;
        }
        .heal-button:hover {
            color: #55ff55;
            border-color: #19a619;
            text-shadow: 0 0 5px #19a619;
        }
        .quick-button {
            background: rgba(0,0,0,0.5);
            border: 1px solid #444;
            color: #888;
            font-size: 0.7rem;
            transition: all 0.2s;
        }
        .quick-button:hover {
            background: rgba(50,50,50,0.8);
            border-color: #888;
            color: #fff;
        }

        /* Tabs */
        .tab-button {
            color: #666;
            border-bottom: 2px solid transparent;
            transition: all 0.3s;
        }
        .tab-button.active {
            color: #d4d4d4;
            border-bottom: 2px solid #a61919;
            text-shadow: 0 0 5px rgba(166, 25, 25, 0.5);
        }

        /* Victory screen */
        #victory-achieved {
            opacity: 0;
            transform: scale(1.1);
            pointer-events: none;
            transition: opacity 2s ease-in, transform 5s ease-out;
        }
        #victory-achieved.active {
            opacity: 1;
            transform: scale(1);
        }
        
        #victory-achieved.active h1 {
            text-shadow: 0 0 20px rgba(234, 179, 8, 0.7),
                         0 0 30px rgba(234, 179, 8, 0.5),
                         0 0 40px rgba(234, 179, 8, 0.3);
        }

        /* Shake on attack */
        .shake {
            animation: shake 0.5s cubic-bezier(.36,.07,.19,.97) both;
        }

        @keyframes shake {
            10%, 90% { transform: translate3d(-1px, 0, 0); }
            20%, 80% { transform: translate3d(2px, 0, 0); }
            30%, 50%, 70% { transform: translate3d(-4px, 0, 0); }
            40%, 60% { transform: translate3d(4px, 0, 0); }
        }

        .portrait-frame {
            box-shadow: 0 0 30px rgba(0,0,0,0.8);
            border: 1px solid rgba(255,255,255,0.1);
            background: rgba(0,0,0,0.3);
        }
