        }
        /* Health bar container */
        .bar-container {
            position: relative;
            width: 100%;
            height: 32px;
            background: #1a1a1a;
            border: 2px solid #333;
            box-shadow: 0 0 20px rgba(0,0,0,0.8);
        }
        /* Health bar */
        .bar-red {
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            background: linear-gradient(to bottom, #a61919, #630b0b);
            width: 100%;
            z-index: 2;
            transition: width 0.15s linear;
            box-shadow: 4px 0 10px rgba(0,0,0,0.5);
        }
        /* Yellow damage indicator */
        .bar-yellow {
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            background: #d4b028;
            width: 100%;
            z-index: 1;
            transition: width 0.8s ease-in 0.4s; 
        }
        /* Input field */
        .slhb-input {
            background: rgba(0, 0, 0, 0.6);
            border: 1px solid #555;
