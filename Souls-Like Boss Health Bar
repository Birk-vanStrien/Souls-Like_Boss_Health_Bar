            <div class="w-full max-w-2xl aspect-video portrait-frame rounded-sm mb-6 relative overflow-hidden flex items-center justify-center group transition-all duration-700">
                <img id="hud-icon-img" class="w-full h-full object-contain hidden drop-shadow-2xl" alt="Character Portrait">
                
                <div id="hud-icon-placeholder" class="flex flex-col items-center justify-center text-gray-800 opacity-40">
                    <span class="text-sm uppercase tracking-[0.3em] text-gray-600">No Portrait</span>
                </div>
                
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent pointer-events-none"></div>
            </div>
            <!-- Health bar -->
            <div class="w-full max-w-3xl relative z-20 mb-6">
                <div class="text-left mb-1 pl-1">
                    <h2 id="name-display-1" class="text-3xl text-gray-200 font-medium tracking-wide" style="text-shadow: 0 4px 15px black;">Boss</h2>
                </div>
                <div class="bar-container">
                    <div id="yellow-bar-1" class="bar-yellow"></div>
                    <div id="red-bar-1" class="bar-red"></div>
                </div>
            </div>
            <!-- Second health bar -->
            <div id="boss2-display-container" class="w-full max-w-3xl relative z-20">
                <div class="text-left mb-1 pl-1">
                    <h2 id="name-display-2" class="text-3xl text-gray-200 font-medium tracking-wide" style="text-shadow: 0 4px 15px black;">Boss 2</h2>
                </div>
                <div class="bar-container">
                    <div id="yellow-bar-2" class="bar-yellow"></div>
                    <div id="red-bar-2" class="bar-red"></div>
                </div>
            </div>

        </div>

        <div class="mt-4 w-full max-w-lg slhb-border bg-black/80 p-6 backdrop-blur-sm">
            <!-- Tabs -->
            <div class="flex justify-center gap-8 mb-6 border-b border-gray-800 pb-2">
                <button onclick="switchTab('actions')" id="tab-button-actions" class="tab-button active px-4 py-2 font-bold uppercase text-sm">Actions</button>
                <button onclick="switchTab('settings')" id="tab-button-settings" class="tab-button px-4 py-2 font-bold uppercase text-sm">Settings</button>
            </div>
            <!-- Actions tab -->
            <div id="tab-actions">
                <!-- Amount input field -->
                <div class="flex gap-4 items-start mb-6">
                    <div class="flex-1">
                        <label class="block text-xs text-gray-500 mb-1 uppercase tracking-wider">Amount</label>
                        <input type="number" id="change-input-1" class="w-full p-2 slhb-input text-center text-lg text-white-400" placeholder="0">
                        <div id="quick-buttons-1" class="flex justify-between mt-1 px-1 gap-1">
                            <button onclick="adjustValue(1, -10)" class="quick-button flex-1 rounded">-10</button>
                            <button onclick="adjustValue(1, -1)" class="quick-button flex-1 rounded">-1</button>
                            <button onclick="adjustValue(1, 1)" class="quick-button flex-1 rounded">+1</button>
                            <button onclick="adjustValue(1, 10)" class="quick-button flex-1 rounded">+10</button>
                        </div>
                    </div>
                    <div class="flex gap-4 mt-5">
                        <button onclick="applyDamage(1)" class="slhb-btn attack-button px-6 py-2 h-[46px] font-bold text-red-400">Attack</button>
                        <button onclick="applyHeal(1)" class="slhb-btn heal-button px-6 py-2 h-[46px] font-bold text-green-400">Heal</button>
                    </div>
                </div>
                
                <!-- Boss 2 amount input field -->
                <div id="boss2-action-controls" class="flex gap-4 items-start mb-4 pt-4 border-t border-gray-800">
                    <div class="flex-1">
                        <label class="block text-xs text-gray-500 mb-1 uppercase tracking-wider">Amount</label>
                        <input type="number" id="change-input-2" class="w-full p-2 slhb-input text-center text-lg text-white-400" placeholder="0">
                         <div id="quick-buttons-2" class="flex justify-between mt-1 px-1 gap-1">
                            <button onclick="adjustValue(2, -10)" class="quick-button flex-1 rounded">-10</button>
                            <button onclick="adjustValue(2, -1)" class="quick-button flex-1 rounded">-1</button>
                            <button onclick="adjustValue(2, 1)" class="quick-button flex-1 rounded">+1</button>
                            <button onclick="adjustValue(2, 10)" class="quick-button flex-1 rounded">+10</button>
                        </div>
                    </div>
                    <div class="flex gap-4 mt-5">
                        <button onclick="applyDamage(2)" class="slhb-btn attack-button px-6 py-2 h-[46px] font-bold text-red-400">Attack</button>
                        <button onclick="applyHeal(2)" class="slhb-btn heal-button px-6 py-2 h-[46px] font-bold text-green-400">Heal</button>
                    </div>
                </div>
                <!-- Reset button -->
                <div class="flex justify-center pt-4 border-t border-gray-800">
                    <button onclick="resetGame()" class="slhb-btn px-6 py-2 w-full font-bold text-gray-400 hover:text-white hover:border-gray-500 transition-all">
                        Reset All
                    </button>
                </div>
            </div>
            <!-- Settings tab -->
            <div id="tab-settings" class="hidden space-y-4">
                <!-- Show quick buttons -->
                <div class="pt-2 border-t border-gray-800">
                    <label class="block text-xs text-gray-500 mb-1 uppercase tracking-wider">Quick Adjust Buttons</label>
                    <div class="flex items-center space-x-2 p-2 slhb-input rounded-md">
                        <input type="checkbox" id="quick-buttons-toggle" class="w-4 h-4 text-red-600 bg-gray-700 border-gray-600 rounded focus:ring-red-500">
                        <span class="text-sm text-gray-200">Show buttons</span>
                    </div>
                </div>
                <!-- Show second health bar -->
                <div class="pt-2 border-t border-gray-800">
                    <label class="block text-xs text-gray-500 mb-1 uppercase tracking-wider">Boss 2 Visibility</label>
                    <div class="flex items-center space-x-2 p-2 slhb-input rounded-md">
                        <input type="checkbox" id="boss2-toggle" class="w-4 h-4 text-red-600 bg-gray-700 border-gray-600 rounded focus:ring-red-500">
                        <span class="text-sm text-gray-200">Enable second boss</span>
                    </div>
                </div>
                <!-- Name input -->
                <div>
                    <label class="block text-xs text-gray-500 mb-1 uppercase tracking-wider">Boss Name</label>
                    <input type="text" id="name-input-1" value="Boss" class="w-full p-2 slhb-input text-lg" placeholder="Enter Name">
                </div>
                <!-- Boss 2 name input -->
                <div id="boss2-name-setting">
                    <label class="block text-xs text-gray-500 mb-1 uppercase tracking-wider">Boss 2 Name</label>
                    <input type="text" id="name-input-2" value="Boss 2" class="w-full p-2 slhb-input text-lg" placeholder="Enter Name">
                </div>
                <!-- Picture upload -->
                <div>
                    <label class="block text-xs text-gray-500 mb-1 uppercase tracking-wider">Boss Portrait</label>
                    <input type="file" id="icon-upload" accept="image/*" class="w-full p-2 slhb-input slhb-file-input text-sm text-gray-400">
                </div>
                <!-- Set max HP -->
                <div class="flex gap-4 items-end pt-2 border-t border-gray-800">
                    <div class="flex-1">
                        <label class="block text-xs text-gray-500 mb-1 uppercase tracking-wider">Total Health Boss 1</label>
                        <input type="number" id="max-hp-input-1" value="1000" class="w-full p-2 slhb-input text-center text-lg" placeholder="Max HP">
                    </div>
                    <button onclick="setMaxHp(1)" class="slhb-btn px-6 py-2 h-[46px] font-bold">Set Max</button>
                </div>
                <!-- Set max HP boss 2 -->
                <div id="boss2-hp-setting" class="flex gap-4 items-end pt-2 border-t border-gray-800">
                    <div class="flex-1">
                        <label class="block text-xs text-gray-500 mb-1 uppercase tracking-wider">Total Health Boss 2</label>
                        <input type="number" id="max-hp-input-2" value="1000" class="w-full p-2 slhb-input text-center text-lg" placeholder="Max HP">
                    </div>
                    <button onclick="setMaxHp(2)" class="slhb-btn px-6 py-2 h-[46px] font-bold">Set Max</button>
                </div>               
            </div>
            
        </div>
    </div>
    <!-- Victory screen -->
    <div id="victory-achieved" class="fixed inset-0 z-50 flex items-center justify-center bg-black/90 pointer-events-none">
        <div class="relative flex flex-col items-center">
            <h1 class="text-6xl md:text-8xl font-black text-yellow-300 tracking-widest text-center">VICTORY ACHIEVED</h1>
            <div class="w-3/4 h-1 bg-gradient-to-r from-transparent via-yellow-500 to-transparent mt-8 opacity-80"></div>
        </div>
    </div>

    <script>
        // Default hp
        let bosses = {
            1: { current: 1000, max: 1000 },
            2: { current: 1000, max: 1000 }
        };

        // Call all elements
        const victoryScreen = document.getElementById('victory-achieved');
        const container = document.querySelector('.w-full.max-w-2xl');
        
        const tabActions = document.getElementById('tab-actions');
        const tabSettings = document.getElementById('tab-settings');
        const btnActions = document.getElementById('tab-button-actions');
        const btnSettings = document.getElementById('tab-button-settings');

        const iconUpload = document.getElementById('icon-upload');
        const hudIconImg = document.getElementById('hud-icon-img');
        const hudIconPlaceholder = document.getElementById('hud-icon-placeholder');
        
        const boss2Display = document.getElementById('boss2-display-container');
        const boss2ActionControls = document.getElementById('boss2-action-controls');
        const boss2NameSetting = document.getElementById('boss2-name-setting');
        const boss2HpSetting = document.getElementById('boss2-hp-setting');
        const boss2Toggle = document.getElementById('boss2-toggle');

        const quickButtonsToggle = document.getElementById('quick-buttons-toggle');
        const quickButtons1 = document.getElementById('quick-buttons-1');
        const quickButtons2 = document.getElementById('quick-buttons-2');

        updateVisuals(1);
        updateVisuals(2);
        toggleBoss2();
        toggleQuickButtons();

        document.getElementById('change-input-1').addEventListener("keypress", (e) => { if (e.key === "Enter") applyDamage(1); });
        document.getElementById('change-input-2').addEventListener("keypress", (e) => { if (e.key === "Enter") applyDamage(2); });
        document.getElementById('max-hp-input-1').addEventListener("keypress", (e) => { if (e.key === "Enter") setMaxHp(1); });
        document.getElementById('max-hp-input-2').addEventListener("keypress", (e) => { if (e.key === "Enter") setMaxHp(2); });

        document.getElementById('name-input-1').addEventListener('input', (e) => {
            document.getElementById('name-display-1').textContent = e.target.value || "Boss";
        });
        document.getElementById('name-input-2').addEventListener('input', (e) => {
            document.getElementById('name-display-2').textContent = e.target.value || "Boss 2";
        });
        
        boss2Toggle.addEventListener('change', toggleBoss2);
        quickButtonsToggle.addEventListener('change', toggleQuickButtons);

        iconUpload.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    hudIconImg.src = e.target.result;
                    hudIconImg.classList.remove('hidden');
                    hudIconPlaceholder.classList.add('hidden');
                }
                reader.readAsDataURL(file);
            }
        });

        // Functions
        function adjustValue(id, amount) {
            const input = document.getElementById(`change-input-${id}`);
            let currentVal = parseInt(input.value);
            if(isNaN(currentVal)) currentVal = 0;
            
            let newVal = currentVal + amount;
            if (newVal < 0) newVal = 0;
            
            input.value = newVal;
        }

        function toggleQuickButtons() {
            const isEnabled = quickButtonsToggle.checked;
            quickButtons1.classList.toggle('hidden', !isEnabled);
            quickButtons2.classList.toggle('hidden', !isEnabled);
        }
        
        function toggleBoss2() {
            const isEnabled = boss2Toggle.checked;
            
            boss2Display.classList.toggle('hidden', !isEnabled);
            boss2ActionControls.classList.toggle('hidden', !isEnabled);
            boss2NameSetting.classList.toggle('hidden', !isEnabled);
            boss2HpSetting.classList.toggle('hidden', !isEnabled);
            
            if (!isEnabled) {
                bosses[2].current = 0; 
                updateVisuals(2);
                if (bosses[1].current === 0) {
                    triggerVictory();
                } else {
                    resetVictory();
                }
            } else {
                bosses[2].current = bosses[2].max;
                updateVisuals(2);
                resetVictory();
            }
        }

        function switchTab(tabName) {
            if (tabName === 'actions') {
                tabActions.classList.remove('hidden');
                tabSettings.classList.add('hidden');
                btnActions.classList.add('active');
                btnSettings.classList.remove('active');
            } else {
                tabActions.classList.add('hidden');
                tabSettings.classList.remove('hidden');
                btnActions.classList.remove('active');
                btnSettings.classList.add('active');
            }
        }

        function setMaxHp(id) {
            const input = document.getElementById(`max-hp-input-${id}`);
            const val = parseInt(input.value);
            if (!isNaN(val) && val > 0) {
                bosses[id].max = val;
                bosses[id].current = val;
                updateVisuals(id);
                switchTab('actions');
            }
        }

        function applyDamage(id) {
            const input = document.getElementById(`change-input-${id}`);
            const damage = parseInt(input.value);
            
            if (!isNaN(damage) && damage > 0 && bosses[id].current > 0) {
                if(container) {
                    container.classList.remove('shake');
                    void container.offsetWidth; 
                    container.classList.add('shake');
                }

                bosses[id].current = Math.max(0, bosses[id].current - damage);
                updateVisuals(id);
                
                input.value = '';
                input.focus();

                const boss2Enabled = boss2Toggle.checked;
                const isBoss2Dead = !boss2Enabled || bosses[2].current === 0;

                if (bosses[1].current === 0 && isBoss2Dead) {
                    triggerVictory();
                }
            }
        }
        
        function applyHeal(id) {
            const input = document.getElementById(`change-input-${id}`);
            const healAmount = parseInt(input.value);
            
            if (!isNaN(healAmount) && healAmount > 0 && bosses[id].current < bosses[id].max) {
                bosses[id].current = Math.min(bosses[id].max, bosses[id].current + healAmount);
                updateVisuals(id);
                resetVictory();

                const redBar = document.getElementById(`red-bar-${id}`);
                const yellowBar = document.getElementById(`yellow-bar-${id}`);

                redBar.style.transition = 'none';
                redBar.style.width = `${(bosses[id].current / bosses[id].max) * 100}%`;
                redBar.offsetHeight; 
                redBar.style.transition = 'width 0.15s linear';

                yellowBar.style.width = `${(bosses[id].current / bosses[id].max) * 100}%`;

                input.value = '';
                input.focus();
            }
        }

        function resetGame() {
            bosses[1].current = bosses[1].max;
            if (boss2Toggle.checked) {
                bosses[2].current = bosses[2].max;
            } else {
                bosses[2].current = 0;
            }
            
            resetVictory();
            
            [1, 2].forEach(id => {
                updateVisuals(id);
                document.getElementById(`change-input-${id}`).value = '';
                
                const yellowBar = document.getElementById(`yellow-bar-${id}`);
                const redBar = document.getElementById(`red-bar-${id}`);
                
                yellowBar.style.transition = 'none';
                redBar.style.transition = 'none';

                if (id === 2 && !boss2Toggle.checked) {
                     yellowBar.style.width = '0%';
                     redBar.style.width = '0%';
                } else {
                     yellowBar.style.width = '100%';
                     redBar.style.width = '100%';
                }

                yellowBar.offsetHeight; 
                redBar.offsetHeight; 
                setTimeout(() => {
                    yellowBar.style.transition = 'width 0.8s ease-in 0.4s';
                    redBar.style.transition = 'width 0.15s linear';
                }, 50);
            });
        }

        function updateVisuals(id) {
            const percentage = (bosses[id].current / bosses[id].max) * 100;
            const redBar = document.getElementById(`red-bar-${id}`);
            const yellowBar = document.getElementById(`yellow-bar-${id}`);
            
            if (id === 2 && !boss2Toggle.checked) {
                redBar.style.width = '0%';
                yellowBar.style.width = '0%';
            } else {
                redBar.style.width = `${percentage}%`;
                if (bosses[id].current < bosses[id].max) {
                     yellowBar.style.width = `${percentage}%`;
                }
            }
        }

        function triggerVictory() {
            victoryScreen.classList.add('active');
        }

        function resetVictory() {
            victoryScreen.classList.remove('active');
        }
    </script>
</body>
</html>
